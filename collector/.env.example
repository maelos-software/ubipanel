# UniFi Controller
UNIFI_URL=https://192.168.8.1
UNIFI_USER=unpoller
UNIFI_PASS=your_password_here
UNIFI_SITE=default

# InfluxDB
INFLUX_URL=http://localhost:8086
INFLUX_DB=unpoller
INFLUX_USER=unpoller
INFLUX_PASS=your_influx_password_here

# Collection settings
COLLECTION_INTERVAL=300000    # 5 minutes (in ms) - how often to collect data
LOG_LEVEL=info                # debug, info, warn, error

# Resilience settings (optional - these are the defaults)
REQUEST_TIMEOUT=30000         # 30 seconds - timeout for individual requests
MAX_RETRIES=3                 # Number of retries per request before giving up
RETRY_DELAY=5000              # 5 seconds - base delay between retries (multiplied by attempt number)
STARTUP_RETRY_DELAY=30000     # 30 seconds - delay between connection attempts at startup

# TLS settings (optional)
# UNIFI_VERIFY_SSL=true       # Set to 'true' to verify SSL certificates (default: false)
